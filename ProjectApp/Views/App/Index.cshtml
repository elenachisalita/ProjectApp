@{
    ViewBag.Title = "Home Page";
}

<!DOCTYPE html>
<html>
<head>
    <title>Books shop: @ViewBag.Title</title>
    <link href="~/css/site.css" rel="stylesheet"/>
</head>
<body>
    <h2>@ViewBag.Title</h2>
    <div class="product-info">
        <img src="img/book1.jpg" width="130" height="130" />
        <h3>The Mud</h3>
        <ul class="product-props">
            <li>Price: 9.00</li>
            <li>Title: Splendida cetate</li>
            <li>Description: the best</li>
        </ul>
        <button id="buyButton">Buy</button>
    </div>

    <div id="theForm">Login</div>
    <form class="popup-form">
        <label>Username:</label>
        <br />
        <input />
        <br />
        <label>Email:</label>
        <br />
        <input type="email" />
        <br />
        <label>Subject:</label>
        <br />
        <input type="text" />
        <br />
        <label>Message:</label>
        <br />
        <textarea rows="4"></textarea>
        <br />
        <input type="submit" value="Send Message" />
    </form>

</body>
</html>